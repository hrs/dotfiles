[alias]
  amend   = commit --amend
  br	= branch
  cdiff	= diff --cached
  cm	= commit -m
  ci	= commit -v
  co	= checkout
  dump	= cat-file -p
  hist	= log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  lg	= log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  st	= status
  sum = log --oneline --no-merges
  type	= cat-file -t
  unstage = reset HEAD

[core]
  excludesfile = ~/.gitignore

[user]
  name = Harry Schwartz
  email = hschwartz@brightcove.com

[color]
  ui = true

[color "grep"]
  filename = magenta
  match = bold red
  linenumber = bold blue

[color "diff"]
  meta = bold cyan

[grep]
  linenumber = true

[push]
  default = current

[include]
  # for creds
  path = ~/.gitconfig.local
