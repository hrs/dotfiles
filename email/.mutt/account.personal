set from = "hello@harryrschwartz.com"
set sendmail = "msmtp -a personal"
set spoolfile = "+personal/inbox"
set mbox = "+personal/archive"
set postponed = "+personal/drafts"
set record = "+personal/sent"
set copy = "yes"
macro index gi "<change-folder>+personal/inbox<enter>" "go to the INBOX"

macro index d "s=personal/archive\n" "archive message"
macro pager d "s=personal/archive\n" "archive message"

set crypt_autosign = yes
