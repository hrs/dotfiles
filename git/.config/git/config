[alias]
  aa = add --all
  amend = commit --amend
  br = branch
  checkout-pr = "!f() { git fetch origin pull/$1/head:pr-$1 && git checkout pr-$1; }; f"
  cm = commit -m
  co = checkout
  dc = diff --cached
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  loc = !git diff --stat `git hash-object -t tree /dev/null` | tail -1 | cut -d' ' -f5
  pr = pull-request
  st = status -sb
  sum = log --no-merges --date=short --pretty=format:\"%C(green)%ad %C(yellow)%h %Creset%s\"
  unstage = reset HEAD
[branch]
  autosetuprebase = always
[color]
  ui = true
[color "diff"]
  meta = bold cyan
[color "grep"]
  filename = magenta
  match = bold red
  linenumber = bold blue
[commit]
  # gpgsign = true
  template = ~/.config/git/message
[core]
  attributesfile = ~/.config/git/info/attributes
  excludesfile = ~/.config/git/ignore
[diff]
  colorMoved = default
[diff "common-lisp"]
    xfuncname="^\\((def\\S+\\s+\\S+)"
[diff "elisp"]
    xfuncname="^\\((((def\\S+)|use-package)\\s+\\S+)"
[diff "sqlite3"]
    binary = true
    textconv = "echo .dump | sqlite3"
[fetch]
  prune = true
[github]
  user = hrs
[grep]
  linenumber = true
[init]
  defaultBranch = main
[add.interactive]
  useBuiltin = false
[merge]
  ff = only
[push]
  default = current
  followTags = true
[rebase]
  autoSquash = true
  autoStash = true
[sendemail]
  smtpserver = /usr/bin/msmtp
[user]
  name = Robin Schwartz
  email = hello@robinschwartz.me
