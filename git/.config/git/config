[alias]
  aa = add --all
  amend = commit --amend
  br = branch
  checkout-pr = "!f() { git fetch origin pull/$1/head:pr-$1 && git checkout pr-$1; }; f"
  cm = commit -m
  co = checkout
  dc = diff --cached
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  loc = !git diff --stat `git hash-object -t tree /dev/null` | tail -1 | cut -d' ' -f5
  pr = pull-request
  st = status -sb
  sum = log --no-merges --date=short --pretty=format:\"%C(green)%ad %C(yellow)%h %Creset%s\"
  unstage = reset HEAD
[branch]
  autosetuprebase = always
[color]
  ui = true
[color "diff"]
  meta = bold cyan
[color "grep"]
  filename = magenta
  match = bold red
  linenumber = bold blue
[commit]
  gpgsign = true
  template = ~/.config/git/message
[core]
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=4 -RFX
[fetch]
  prune = true
[github]
  user = hrs
[grep]
  linenumber = true
[init]
  defaultBranch = main
  templateDir = ~/.config/git/template/
[merge]
  ff = only
[push]
  default = current
  followTags = true
[rebase]
  autosquash = true
[sendemail]
  smtpserver = /usr/bin/msmtp
[user]
  name = Harry R. Schwartz
  email = hello@harryrschwartz.com
  signingkey = 25AE721B
